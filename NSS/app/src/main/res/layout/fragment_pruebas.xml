<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNnsAuxiliar"
    tools:context=".pruebas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.github.anastr.speedviewlib.SpeedView
                android:id="@+id/speedView"
                android:layout_width="285dp"
                android:layout_height="265dp" />

            <com.github.anastr.speedviewlib.DeluxeSpeedView
                android:id="@+id/speedDeluxe"
                android:layout_width="285dp"
                android:layout_height="265dp"
                app:sv_speedBackgroundColor="@color/colorNnsAuxiliar5" />

            <Button
                android:id="@+id/btnIniciarPrueba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btnIniciarPrueb" />


        </LinearLayout>
    </ScrollView>


</FrameLayout>